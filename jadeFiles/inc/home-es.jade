// List Pages
mixin page(rota, caption, status)
    li
      a(href='#{rota}' data-page-title='#{caption}' class='#{status}') 
  
  ul.pages
    +page('#header', 'Home', '.is-active.header')
    +page('#about-li', 'About', '.page-about-li') 
    +page('#carrer-li', 'Carrer', '.page-carrer-li') 
    +page('#skill-li', 'Skills', '.page-skill-li') 
    +page('#project-li', 'Projects', '.page-project-li  ') 
    //+page('#app-li', 'App', '.page-app-li')
    +page('#contact-li', 'Contact', '.page-contact-li ')   
  

// Menu Nav
mixin nav(rota, name)
    li
      a(href='#{rota}') <span> #{name} </span>
ul.menu
  +nav('#header', 'Home')
  +nav('#about-li', 'About') 
  +nav('#carrer-li', 'Carrer') 
  +nav('#skill-li', 'Skills') 
  +nav('#project-li', 'Projects') 
  //+nav('#app-li', 'App')
  +nav('#contact-li', 'Contact') 
             

